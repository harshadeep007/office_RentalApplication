@model IEnumerable<Rental_Application.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>



<table class="table table-bordered table-hover ">
    <thead>
        @Html.ActionLink("New Movie","NewMovie", "Movies",null, new { @class = "btn btn-primary" })
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.MovieName,"Edit","Movies",new {id=movie.id},null)</td>
                <td>@movie.Genre.GenreName</td>
            </tr>
        }
    </tbody>


</table>

