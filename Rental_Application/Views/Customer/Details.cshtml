@model Rental_Application.Models.Customer
@{
    ViewBag.Title = Model.CustomerName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.CustomerName</h2>

<ul>

    <li>Membership Type: @Model.MemberShipType.MembershipName</li>
    @if (Model.Birthdate.HasValue)
    {
        <li>BirthDate: @Model.Birthdate.Value.ToShortDateString() </li>
    }

</ul>


